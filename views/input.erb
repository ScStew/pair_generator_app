

<div id = "input_page">
How many people do you wanna pair up?<br>
	<form method = "post" action = "pair" id = "text_box">
	    <input type ="number" min = 4 autofocus = "autofocus" id ="names_to_pair" oninput ="setup()">
	    <p id = "demo"></p>
	    <br>
	    <input type = "submit">
	</form>
</div>

<script>
function setup(){
       var x = document.getElementById("names_to_pair").value;
        document.getElementById("demo").innerHTML = "Enter their names in the boxes below:<br>";
        for (var count = 1; count <= x; count++) {
            var input = document.createElement("input");
            input.type = "text";
            input.name = "text" + count;
            input.id = "input";
            input.required = true;
            input.placeholder = "Enter Name"
            document.getElementById("demo").appendChild(input).value;
		}
}
</script>
